mixin section(spec)
  - spec = spec || {}
  - spec.__class = spec.__class || ''

  section(class=spec.__class)&attributes(attributes)
    if(spec == 'wines')
      h3.section__title This week at the Wine Merchant
      a(href='#') view all wines
      .wines__panel
        each wine in site.data.winelist
          +wines(wine)

