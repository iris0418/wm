mixin wm_logo
  .wine-merchant-logo
      .row
          .circle__solid__red
          .circle__solid__red
          .circle__solid__red
      .row
          .circle__solid__red
          .circle__solid__red
      .row
          .circle__solid__red
      p.wmlogo-wine WINE
      p.wmlogo-merchant MERCHANT

mixin navlist(nav_list)
    li
        a(href=nav_list.link)= nav_list.name
        if nav_list.sub.length > 0
            ul
                each nav_list_lv2 in nav_list.sub
                    +navlist(nav_list_lv2)


mixin wines(wine)
    .wine__item 
        img(src='images/#{wine.name}.png')
        h4.wine__title 
            strong #{wine.brand} 
            | #{wine.title}
        .wine__desc $wine.price
        | bottle  
        | $#{wine.caseprice} 
        | case
        .wine__rate
        .wine__review #{wine.noOfReviews} reviews
