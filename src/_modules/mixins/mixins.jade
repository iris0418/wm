mixin navlist(nav_list)
    li
        a(href=nav_list.link)= nav_list.name
        if nav_list.sub.length > 0
            ul
                each nav_list_lv2 in nav_list.sub
                    +navlist(nav_list_lv2)


mixin wines(wine)
    .wine__item(tabindex=0)
        img(src='images/#{wine.name}.png',title="#{wine.brand} #{wine.title}")
        .wine__title 
            strong #{wine.brand} 
            | #{wine.title}
        .wine__price
            span $#{wine.price} bottle  
            span $#{wine.caseprice} case
        .wine__rate
            - var i= 0
            while i < wine.rate
                span.star.active    
                - i++
            while i >= wine.rate && i < 5
                span.star
                - i++
            span.wine__review #{wine.noOfReviews} reviews
        .wine__btns
            a(href="#",tabindex=1).view__btn VIEW WINE
            a(href="#",tabindex=1).addToCart__btn ADD TO CART


mixin recipesItem(imgurl,imgtitle,title,desc,linktitle, link)
    .recipes__item
        figure.recipe__img.clearfix
            img(src= imgurl, alt= imgtitle, title= imgtitle)
            .img__title= imgtitle
        h5= title
        .recipe__desc= desc
        a(href="#{link}").recipe__link= linktitle

mixin wmfan(imgurl,profileimgurl,name)
    figure.wmfan
        img(src= "../../images/#{imgurl}.png",alt= name)
        img(src= "../../images/#{profileimgurl}.png",alt= name)
        a(href="#")= name
        
